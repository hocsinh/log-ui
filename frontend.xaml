<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Margin="5">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Image Grid.Row="0" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Width="400" Height="80" x:Name="imgCwLogo" />
    <TabControl Grid.Row="1" x:Name="tabs">
        <TabItem x:Name="tabLog">
            <TabItem.Header>
                Live ConnectWise Manage Server Log
            </TabItem.Header>
        </TabItem>
    </TabControl>
    <Grid Grid.Row="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" HorizontalAlignment="Right" TextWrapping="Wrap">You may close this application at any time</TextBlock>
    </Grid>
</Grid>